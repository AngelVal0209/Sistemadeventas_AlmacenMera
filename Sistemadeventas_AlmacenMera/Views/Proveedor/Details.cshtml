@model Sistemadeventas_AlmacenMera.Models.Proveedore

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">
        <i class="bi bi-person-vcard"></i> Detalles del Proveedor
    </h2>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">
                    Nombre del Proveedor
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreProveedor)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    Teléfono
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    Correo Electrónico
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    Dirección
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.IdProveedor" class="btn btn-warning text-white">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>

