@model Sistemadeventas_AlmacenMera.Models.Proveedore

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container mt-4">
    <h2 class="text-center text-success mb-4">
        <i class="bi bi-pencil-square"></i> Editar Proveedor
    </h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdProveedor" />

                <div class="mb-3">
                    <label asp-for="NombreProveedor" class="form-label fw-bold"></label>
                    <input asp-for="NombreProveedor" class="form-control" placeholder="Ej: Distribuidora López" />
                    <span asp-validation-for="NombreProveedor" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label fw-bold"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ej: 987654321" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Ej: proveedor@mail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label fw-bold"></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Ej: Av. Principal 123, Lima" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
