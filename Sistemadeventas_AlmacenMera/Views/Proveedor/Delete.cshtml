@model Sistemadeventas_AlmacenMera.Models.Proveedore

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<div class="container mt-4">
    <h2 class="text-center text-danger mb-4">
        <i class="bi bi-exclamation-triangle-fill"></i> Eliminar Proveedor
    </h2>

    <div class="alert alert-warning text-center shadow-sm">
        <h5><i class="bi bi-question-circle"></i> ¿Estás seguro de que deseas eliminar este proveedor?</h5>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">
                    Nombre del Proveedor
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreProveedor)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    Teléfono
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    Correo Electrónico
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    Dirección
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="IdProveedor" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Eliminar Definitivamente
            </button>
        </div>
    </form>
</div>
