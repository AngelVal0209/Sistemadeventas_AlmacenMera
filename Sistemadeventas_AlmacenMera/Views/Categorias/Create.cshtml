@model Sistemadeventas_AlmacenMera.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">➕ Nueva Categoría</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="NombreCategoria" class="form-label fw-bold">Nombre de la Categoría</label>
                    <input asp-for="NombreCategoria" class="form-control" placeholder="Ej: Lácteos, Abarrotes, Bebidas..." />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Cancelar</a>
                    <button type="submit" class="btn btn-success">✅ Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
