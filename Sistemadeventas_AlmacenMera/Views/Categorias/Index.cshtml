@model IEnumerable<Sistemadeventas_AlmacenMera.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">📊 Categorías de Productos</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">➕ Agregar Nueva Categoría</a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCategoria)
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCategoria)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-warning">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-info text-white">🔍 Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-danger">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
